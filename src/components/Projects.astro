---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "LMC Home Health y Identity Services",
    description:
      "Plataforma   de captura y procesamiento de datos en medico , estructurada con arquitectura de microservicio con el modelo hexagonal, Utilizamos tecnologías .Net Core, Angular -Tailwind CSS, Sql Server, OpenId .",
    link: "https://leonmedicalcenters.com/service/servicios-especializados/salud-en-el-hogar/?lang=es",
    image: "/leon.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Agente hack-inn",
    description:
      "Plataforma de Captura de datos en tiempo real y procesamiento con IA, para la predicción de   procesos repetitivos, estructurada con arquitectura de  capa  y cliente  servidos con el modelo hexagonal, Utilizamos tecnologías .Net Core, Angular, Sql Server, Jwt, Api- RestFull.",
    link: "https://www.hack-inn.com/",
    image: "/hk.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Plataform de Smart City",
    description:
      "Plataforma de análisis de datos y procesamiento IA, Predicción y modela de comportamiento vial de las ciudades, estructurada con arquitectura de microservicio y cliente servidos con el modelo hexagonal, Utilizamos tecnologías  fiware,Angular, PostGresQL, Jwt, MQTT.",
    link: "https://and.gov.co/",
    image: "/and.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Plataform de Tdriver",
    description:
      "Solución completa de software de taxis como Uber para su negocio de despacho de taxis,  estructurada con arquitectura de microservicio con el modelo hexagonal, Utilizamos tecnologías .Net Core, Angular, Sql Server, Android , Flutter.",
    link: "https://tdriver.co/",
    image: "https://tdriver.co/wp-content/imagen/Platform-Img.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
       
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



